<div class="container">
  <h1>Restaurants</h1>
  <ul>
    <% @restaurants.each do |r| %>
    <li><%= link_to r.name, restaurant_path(r.id) %>
      -
      <%= link_to "Edit", edit_restaurant_path(r.id) %>
      - <i class: "fas fa-trash-alt"></i>
      <%= link_to "delete", restaurant_path(r.id), method: :delete, data: { confirm: "Are you sure?" }  %>
      </li>
    <% end %>
  </ul>
<p><%= link_to "Create new restaurant", new_restaurant_path, class: "btn btn-primary" %>

</div>
