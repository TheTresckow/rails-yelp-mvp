<div class="container">
  <h1>Add a Restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit class: "btn btn-primary" %>
  <% end %>

  <p><%= link_to "Home", restaurants_path, class: "btn btn-primary" %>
  </div>
